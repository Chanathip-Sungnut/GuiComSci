<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Console">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Calculate Fare"
        android:textSize="35dp"
        android:textStyle="bold" />


    <!-- Check Train Type -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="15dp"
        android:text="Train Type"
        android:textSize="25dp"
        android:textStyle="bold" />
    <RadioGroup
        android:id="@+id/G1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/CityRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:checked="false"
            android:text="City Line" />

        <RadioButton
            android:id="@+id/ExpressRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:checked="false"
            android:text="Express Line" />
    </RadioGroup>

    <!-- Check Passenger Type -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:text="Passenger Type"
        android:textSize="25dp"
        android:textStyle="bold" />
    <RadioGroup
        android:id="@+id/G2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/PeopleRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:checked="false"
            android:text="People" />

        <RadioButton
            android:id="@+id/StudentRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:checked="false"
            android:text="Student" />
    </RadioGroup>


    <!-- Starting Station -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:text="Starting Station"
        android:textSize="25dp"
        android:textStyle="bold" />
    <Spinner
        android:id="@+id/spinnerS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog" />


    <!-- Ending Station -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:text="Ending Station"
        android:textSize="25dp"
        android:textStyle="bold" />
    <Spinner
        android:id="@+id/spinnerE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog" />


    <!-- No.Passenger -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Number of Passengers"
        android:textSize="25dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="1" />


    <!--Button -->
    <Button
        android:id="@+id/Calbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickCal"
        android:text="Calculate"
        android:layout_marginTop="40dp"
        android:textSize="19dp" />
    <Button
        android:id="@+id/Clearbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickClear"
        android:text="Clear"
        android:layout_marginTop="8dp"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/CS_Signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:contextClickable="true"
        android:text="SIGN OUT"
        android:textSize="20dp" />


</LinearLayout>